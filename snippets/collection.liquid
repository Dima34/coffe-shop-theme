<style>
	.collection-item{
		border-radius :{{section.settings.card-border-radius}}px;
	}
</style>

<div class = "collection-heading">
	{% render 'picture',img:collection.image,  width: 25, height: 25 %}
	<h2>{{collection.title}}</h2>
</div>

<ul class="collection-list">
	{% for product in collection.products %}
		<li>
			{% render "card", product: product, section:section %}
		</li>
	{% endfor %}
</ul>