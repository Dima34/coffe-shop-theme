<picture>
	<source srcset="
		{% assign newWidth = width %}
		{% assign newHeight = height%}
		{% assign newSize = newWidth | append: 'x' | append: newHeight %}
		{{img | asset_img_url: newSize}} 1x,
		{% assign newWidth = width | times: 1.5 | ceil %}
		{% assign newHeight = height | times: 1.5| ceil %}
		{% assign newSize = newWidth | append: 'x' | append: newHeight %}
		{{img | asset_img_url: newSize}} 1.5x,
		{% assign newWidth = width | times: 2 | ceil %}
		{% assign newHeight = height | times: 2| ceil %}
		{% assign newSize = newWidth | append: 'x' | append: newHeight %}
		{{img | asset_img_url: newSize}} 2x,
		{% assign newWidth = width | times: 3 | ceil %}
		{% assign newHeight = height | times: 3| ceil %}
		{% assign newSize = newWidth | append: 'x' | append: newHeight %}
		{{img | asset_img_url: newSize}} 3x"
	>
	{% assign newWidth = width %}
	{% assign newHeight = height%}
	{% assign newSize = newWidth | append: 'x' | append: newHeight %}
	<img src="{{img | asset_img_url: newSize}}" width="{{width}}" height="{{height}}" alt="logo">
</picture>
