<picture>
	<source srcset="{{ img | image_url: width: width, height: height }} 1x,
		{% assign newWidth = width | times: 1.5 | ceil %}
		{% assign newHeight = height | times: 1.5 | ceil %}
		{{ img | image_url: width: newWidth, height: newHeight }} 1.5x,
		{% assign newWidth = width | times: 2 | ceil %}
		{% assign newHeight = height | times: 2 | ceil %}
		{{ img | image_url: width: newWidth, height: newHeight }} 2x,
		{% assign newWidth = width | times: 3 | ceil %}
		{% assign newHeight = height | times: 3 | ceil %}
		{{ img | image_url: width: newWidth, height: newHeight }} 3x"
	>
		
	<img src="{{ img | image_url: width: width, height: height }}" width="{{ width }}" height="{{ height }}" alt="{{ alt }}">
</picture>
