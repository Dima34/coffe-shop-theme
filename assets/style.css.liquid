@font-face {
	font-family: "SF";
	font-weight: 400;
	src: url('{{"sf-regular.woff2" | asset_url}}') format("woff2");
}

@font-face {
	font-family: "SF";
	font-weight: 500;
	src: url('{{"sf-medium.woff2" | asset_url}}') format("woff2");
}

@font-face {
	font-family: "SF";
	font-weight: 600;
	src: url('{{"sf-semibold.woff2" | asset_url}}') format("woff2");
}

@font-face {
	font-family: "SF";
	font-weight: 700;
	src: url('{{"sf-bold.woff2" | asset_url}}') format("woff2");
}

body{
	margin: 0;
	padding: 0;
	background-color: #FEFEFE;
	position: relative;
}

/* #FEFEFE */

button{
	cursor: pointer;
}

h2,h1,p,span,form,a, button{
	margin: 0;
	padding: 0;
	font-family: "SF";
}

a{
	text-decoration: none;
}

ul{
	list-style: none;
	padding: 0;
	margin: 0;
}

header{
	border-bottom: 1px solid #F4F4F4;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	z-index: 2;
}

main .wrapper{
	padding: 0;
	padding-top: 50px;
	padding-bottom: 75px;
	display: grid;
	grid-template-columns: 50px 1fr;
}

main .wrapper div:nth-of-type(2){
	padding:0 15px;
}

aside{
	width: 50px;
	position: fixed;
	left: 0;
	bottom: 0;
	height: calc(100vh - 48px);
	border-right: 1px solid #F4F4F4;
}

header .wrapper{
	padding-top: 8px;
	padding-bottom: 8px;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.header__logo,
.header__profile{
	filter: grayscale(100%);
	padding: 5px;
	transition:filter .3s, box-shadow .3s;
	border-radius: 6px;
}

.header__logo:hover,
.header__profile:hover,
.header__logo:focus,
.header__profile:focus{
	filter: grayscale(0%);
	box-shadow: 0px 4px 3px rgba(0,0,0,.22);
}

.header__logo:active,
.header__profile:active{
	box-shadow: 0px 0px 0px rgba(0,0,0,.22);
}

.header__logo img{
	display: block;
	width: 52px;
	height: 32px;
}

.wrapper{
	max-width: 375px;
	width: 100%;
	padding: 0 15px;
	margin: 0 auto;
	box-sizing: border-box;
}