@font-face {
	font-family: "SF";
	font-weight: 400;
	src: url('{{"sf-regular.woff2" | asset_url}}') format("woff2");
}

@font-face {
	font-family: "SF";
	font-weight: 500;
	src: url('{{"sf-medium.woff2" | asset_url}}') format("woff2");
}

@font-face {
	font-family: "SF";
	font-weight: 600;
	src: url('{{"sf-semibold.woff2" | asset_url}}') format("woff2");
}

@font-face {
	font-family: "SF";
	font-weight: 700;
	src: url('{{"sf-bold.woff2" | asset_url}}') format("woff2");
}

body{
	margin: 0;
	padding: 0;
	background-color: #FEFEFE;
	position: relative;
}

button{
	cursor: pointer;
}

h2,h1,p,span,form,a, button{
	margin: 0;
	padding: 0;
	font-family: "SF";
}

ul{
	list-style: none;
	padding: 0;
	margin: 0;
}

header{
	border-bottom: 1px solid #F4F4F4;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	z-index: 2;
}

main{
	padding-top: 50px;
	padding-bottom: 75px;
}

header .wrapper{
	padding-top: 8px;
	padding-bottom: 8px;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.header__logo,
.header__profile{
	filter: grayscale(100%);
	padding: 5px;
	transition:filter .3s, box-shadow .3s;
	border-radius: 6px;
}

.header__logo:hover,
.header__profile:hover,
.header__logo:focus,
.header__profile:focus{
	filter: grayscale(0%);
	box-shadow: 0px 4px 3px rgba(0,0,0,.19);
}

.header__logo:active,
.header__profile:active{
	box-shadow: 0px 0px 0px rgba(0,0,0,.19);
}

.header__logo img{
	display: block;
	width: 52px;
	height: 32px;
}

.wrapper{
	max-width: 325px;
	width: 100%;
	padding: 0 15px;
	margin: 0 auto;
	box-sizing: border-box;
}

/* Collection card */

.collection-heading{
	margin-top: 30px;
	display: flex;
	align-items: center;
	gap: 8px;
	margin-bottom: 15px;
}

.collection-heading img{
	width: 25px;
	height: 25px;
}

.collection-heading h2{
	text-transform: uppercase;
	color: #939393;
	font-size: 14px;
}

.collection-list{
	display: flex;
	flex-direction: column;
	gap: 15px;
}

.collection-item{
	background-color: #fff;
	border: 1px solid #F4F4F4;
	box-shadow: 0px 2px 13px rgba(0, 0, 0, 0.05);
	border-radius: 8px;
	padding: 16px;
	display: flex;
	gap: 15px;
}

.collection-item > img{
	flex-shrink: 0;
	flex-grow: 0;
	width: 90px;
	height: 90px;
	border-radius: 50%;
	filter: drop-shadow(0px 4px 10px rgba(0, 0, 0, 0.19));
	margin-top: 10px;
}

.collection-item__info{
	display: flex;
	flex-direction: column;
	width: 100%;
}

.collection-item__info h2{
	font-size: 16px;
	line-height: 22px;
	font-weight: 700;
}

.collection-item__info p{
	font-size: 12px;
	line-height: 20px;
	color: #606060;
	margin-bottom: 16px;
}

.collection-item__info form{
	display: block;
	margin-left: auto;
}

.collection-item__info button{
	background: #F5F5F5;
	border-radius: 6px;
	border: 0;
	padding: 6px;
	display: flex;
	align-items: center;
	gap: 5px;
	font-weight: 600;
	font-size: 14px;
	line-height: 20px;
	transition:box-shadow .2s linear, background-color .2s linear,color .1s linear;
}

.collection-item__info form:hover button,
.collection-item__info form button:focus{
	box-shadow: 0px 3px 5px rgba(0,0,0,.19);
	background-color: #00A3FF;
	color: #fff;
}

.collection-item__info form button:active{
	box-shadow: 0px 0px 0px rgba(0,0,0,.19);
}

.collection-item__info form svg path{
	transition: .15s linear;
}

.collection-item__info form:hover svg path,
.collection-item__info form button:focus svg path{
	fill: #fff;
}

#footer-cart{
	border-top: 1px solid #F4F4F4;
	background-color: #fff;
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	z-index: 2;
}

#footer-cart .wrapper{
	display: flex;
	align-items: center;
	gap: 10px;
}

.footer-cart__lineitem{
	width: 100%;
	display: flex;
	margin-left: auto;
	gap: 15px;
	overflow-y: auto;
	padding: 15px;
	padding-right: 5px;
	border-radius: 50px;
}

.footer-cart__lineitem::-webkit-scrollbar {
	height: 5px; /* высота для горизонтального скролла */
	background-color: transparent;
}

/* ползунок скроллбара */
.footer-cart__lineitem::-webkit-scrollbar-thumb {
	background-color: #4E5B63;
	border-radius: 10px;
}

.footer-cart__lineitem::-webkit-scrollbar-thumb:hover {
	background-color: #00a3ff;
}

/* Стрелки */
.footer-cart__lineitem::-webkit-scrollbar-button:vertical:start:decrement,
.footer-cart__lineitem::-webkit-scrollbar-button:vertical:end:increment,
.footer-cart__lineitem::-webkit-scrollbar-button:horizontal:start:decrement,
.footer-cart__lineitem::-webkit-scrollbar-button:horizontal:end:increment {
	opacity: 0;
}


.footer-cart__lineitem img{
	display: block;
	border-radius: 50%;
	filter: drop-shadow(0px 4px 3px rgba(0,0,0,.19));
}

.footer-cart__cart-link{
	display: flex;
	padding: 8px;
	background: #4E5B63;
	border-radius: 6px;
	gap: 8px;
	font-weight: 600;
	font-size: 14px;
	line-height: 20px;
	color: #fff;
	text-decoration: none;
	flex-shrink: 0;
}